{
  "files": ["src/index.ts"],
  "exclude": ["dist", "node_modules", "__tests__", "docs", ".**"],
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": [],

    "strict": true,

    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "rootDir": "src"
  }
}
